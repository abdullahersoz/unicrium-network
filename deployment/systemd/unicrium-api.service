[Unit]
Description=Unicrium API Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/unicrium/unicrium-network
ExecStart=/usr/bin/python3 network/api_server.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/unicrium-api.log
StandardError=append:/var/log/unicrium-api.log

[Install]
WantedBy=multi-user.target
