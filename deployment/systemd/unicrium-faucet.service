[Unit]
Description=Unicrium Faucet
After=network.target unicrium-api.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/unicrium/unicrium-network
ExecStart=/usr/bin/python3 tools/faucet.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/unicrium-faucet.log
StandardError=append:/var/log/unicrium-faucet.log

[Install]
WantedBy=multi-user.target
